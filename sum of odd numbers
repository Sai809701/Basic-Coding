import java.util.*;
class Scratch {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int sum = 0;
        for(int i = 1;i<=n;i = i+2) {
            if((i%2)==1) {
                sum += i;
            }

        }
        System.out.println("sum of all odd numbers between 0 to "+n+"="+sum);

    }
}